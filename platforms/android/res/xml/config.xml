<?xml version='1.0' encoding='utf-8'?>
<widget id="com.fwi.sagemobile" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="AndroidFullScreen">
        <param name="android-package" value="com.mesmotronic.plugins.FullScreenPlugin" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="ExitApp">
        <param name="android-package" value="cordova.custom.plugins.exitapp.ExitApp" />
    </feature>
    <name>FWI-X3Mobile</name>
    <description>
        FWI X3 Mobile App
    </description>
    <author email="support-ax@fwi-group.com" href="http://www.fwi-group.com">
        FWI Information Technology
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="*" />
    <allow-navigation href="*" />
    <splash density="land-hdpi" src="res/splash/android/splash_p800.png" />
    <splash density="land-ldpi" src="res/splash/android/splash_p800.png" />
    <splash density="land-mdpi" src="res/splash/android/splash_p800.png" />
    <splash density="land-xhdpi" src="res/splash/android/splash_p1280.png" />
    <splash density="land-xxhdpi" src="res/splash/android/splash_p1600.png" />
    <splash density="land-xxxhdpi" src="res/splash/android/splash_p1920.png" />
    <splash density="port-hdpi" src="res/splash/android/splash_p800.png" />
    <splash density="port-ldpi" src="res/splash/android/splash_p800.png" />
    <splash density="port-mdpi" src="res/splash/android/splash_p800.png" />
    <splash density="port-xhdpi" src="res/splash/android/splash_p1280.png" />
    <splash density="port-xxhdpi" src="res/splash/android/splash_p1600.png" />
    <splash density="port-xxxhdpi" src="res/splash/android/splash_p1920.png" />
    <icon density="ldpi" src="res/icon/android/icon_36.png" />
    <icon density="tvdpi" src="res/icon/android/icon_48.png" />
    <icon density="mdpi" src="res/icon/android/icon_64.png" />
    <icon density="hdpi" src="res/icon/android/icon_72.png" />
    <icon density="xhdpi" src="res/icon/android/icon_96.png" />
    <icon density="xxhdpi" src="res/icon/android/icon_144.png" />
    <icon density="xxxhdpi" src="res/icon/android/icon_192.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="Fullscreen" value="true" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="750" />
</widget>
